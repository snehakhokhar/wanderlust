<% layout("layouts/boilerplate") %>
<body>
     <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit list</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"
         class="needs-validation"
         novalidate
         enctype="multipart/form-data">
        <div  class="mb-3">
            <lable for="title" class="form-lable"> Title</lable>
            <input type="text" name=listing[title] value=<%= listing.title %> class="form-control" required/>
            <div class="valid-feedback">
            Looks good!
            </div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">
            Please provide a short description.
        </div>
        </div>
        <% if (listing.image && listing.image.url) { %>
        <div class="mb-3">
            original image <br>
            <img src="<%= originalImage %>" alt="listing image" class="img-fluid mb-2" style="max-width: 300px;">
        </div>
        <% } %>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <!-- <input type="text" name="listing[image]" value="<%= listing.image %>" class="form-control" required/> -->
            <input type="file"
             name="listing[image]"
             class="form-control"
             >
        <div class="invalid-feedback">
            Please provide a valid image URL.
       </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required/>
            <div class="invalid-feedback">
        Please provide a valid Price.
       </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required/>
            <div class="invalid-feedback">
        you should provide a valid location.
       </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required/>
            <div class="invalid-feedback">
        you should provide a country.
       </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Update</button>
    </form>
    </div>
    </div>
</body>
